SQL 626 Exchange Seats

WITH cts AS (
  
    SELECT id + 1 AS id, student
    FROM Seat
    WHERE id % 2 = 1
      AND id + 1 <= (SELECT COUNT(*) FROM Seat)

    UNION ALL

    SELECT id - 1 AS id, student
    FROM Seat
    WHERE id % 2 = 0

    UNION ALL

 
    SELECT id, student
    FROM Seat
    WHERE id % 2 = 1
      AND id + 1 > (SELECT COUNT(*) FROM Seat)
)

SELECT *
FROM cts
ORDER BY id;